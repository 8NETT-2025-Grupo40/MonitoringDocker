# ===== GRAFANA CONFIGURATION =====
# Public URL where Grafana is accessible (used for OAuth callbacks)
# Local dev example: http://localhost:3000
# Production example: https://d1nwjv2yydwsf.cloudfront.net
GRAFANA_URL=http://localhost:3000

# Cookies (set secure=true when using HTTPS)
GRAFANA_COOKIE_SECURE=false

# Local admin credentials (break-glass access)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_ADD_SECURE_PASSWORD

# ===== GENERIC OAUTH (COGNITO) =====
# Enable OAuth login (set true for Cognito login)
GRAFANA_OAUTH_ENABLED=false
GRAFANA_OAUTH_NAME=Cognito
GRAFANA_OAUTH_ALLOW_SIGN_UP=true
GRAFANA_OAUTH_USE_PKCE=true

# AWS Cognito Hosted UI domain (format: https://YOUR_DOMAIN.auth.REGION.amazoncognito.com)
COGNITO_DOMAIN=https://us-east-26eo2tdlnq.auth.us-east-2.amazoncognito.com

# App Client credentials (from Cognito User Pool > App Integration > App Client)
CLIENT_ID=298iq74k7rhfquvfmqf3lararu
CLIENT_SECRET=CHANGE_ME_ADD_YOUR_CLIENT_SECRET

# OAuth scopes (space-separated)
COGNITO_SCOPES=openid email phone

# ===== LOGGING =====
# Log level: debug, info, warn, error (use debug for OAuth troubleshooting)
GRAFANA_LOG_LEVEL=info
